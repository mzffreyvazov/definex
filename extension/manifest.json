{
  "manifest_version": 3,
  "name": "DefineX",
  "version": "1.2.1",
  "description": "Instantly shows rich English definitions when you select a word.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
},
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://209.38.36.112/*",
    "https://www.dictionaryapi.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "src/options/index.html", 
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "action": {
    "default_title": "DefineX",
    "default_popup": "src/popup/index.html",
    "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
  }
}